<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<%- include('./partials/header') %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/header.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < 10; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/detalle/<%= camisetas_de_futbol[i].id %>">
							<figure class="product-box_image">
								<img src="<%= camisetas_de_futbol[i].imagen %>" alt="<%= camisetas_de_futbol[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= camisetas_de_futbol[i].nombre %></h2>
								<p><%= camisetas_de_futbol[i].descripcion %></p>
								<p>Comentarios: <%= camisetas_de_futbol[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < 10; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos/detalle/<%= camisetas_de_futbol[i].id %>">
							<figure class="product-box_image">
								<img src="<%= camisetas_de_futbol[i].imagen %>" alt="<%= camisetas_de_futbol[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= camisetas_de_futbol[i].nombre %></h2>
								<p><%= camisetas_de_futbol[i].descripcion %></p>
								<p>Comentarios: <%= camisetas_de_futbol[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->

	<%- include('./partials/footer') %>
	
</body>	
</html>